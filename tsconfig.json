{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true, // 启用声明文件生成
    "declarationDir": "dist/types"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
